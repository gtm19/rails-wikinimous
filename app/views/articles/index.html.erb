<h2 class="display-2">Articles</h2>

<% @articles.each do |article| %>
  <article class="p-3 my-3 card card-article">
    <h4><%= article.title %></h4>
    <p><%= article.content %></p>
    <div class="row justify-content-end">
      <div class="col-2">
        <%= link_to fa_icon("arrow-right", text: "Read", right: true), article_path(article), class: "btn btn-dark w-100" %>
      </div>
    </div>
  </article>
<% end %>
